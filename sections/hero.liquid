{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="header-container">
    <h1>
        <img src="{{ 'hero-image.svg' | asset_url }}" alt="">
    <span>vintage & thrift</span></h1>
</div>

<div  class="hero-collections">
    <div class="hero-collections__card-container">
        {% for block in section.blocks %}
        {% liquid 
            assign imageBg = block.settings.image_bg
            assign imageHover = block.settings.image_hover
        %}
            <a class="hero-collections__card" href="">
                <div class="hero-collections__card--bg" style="background-image: url('{{ imageBg | image_url: height: 630 }}')"​​​​​​​></div>
                <div class="hero-collections__card--hover"  style="background-image: url('{{ imageHover | image_url: height: 630 }}')"></div>
                <h3 class="hero-collections__card-title">{{ block.settings.collection.title | downcase }}</h3>
            </a>
        {% endfor %}
    </div>  
</div>

{% schema %}
{
    "name": "Hero",
    "blocks":[
        {
            "type": "collection",
            "limit":3,
            "name": "Collection",
            "settings": [
                {
                    "type": "collection",
                    "id":"collection",
                    "label": "Collection"
                },
                {
                    "type": "image_picker",
                    "id":"image_bg",
                    "label": "Image Background"
                },
                {
                    "type": "image_picker",
                    "id":"image_hover",
                    "label": "Image Hover"
                }
            ]
        }
    ],
    "presets": [
        {
            "name":"Hero"
        }
    ]
}
{% endschema %}